{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["@types/node"]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
