{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "cache": false,
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "test:coverage": {
      "cache": false,
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    }
  }
}
