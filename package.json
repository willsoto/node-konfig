{
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "yarn run lint",
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc -i",
      "prettier --write"
    ]
  },
  "volta": {
    "node": "14.15.0"
  }
}
