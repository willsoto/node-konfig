{
  "name": "@willsoto/node-konfig",
  "version": "0.1.0",
  "private": true,
  "description": "Node configuration package",
  "keywords": [
    "configuration"
  ],
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage .nyc_output docs temp",
    "predocs": "npm run build",
    "docs": "api-extractor run --local --verbose",
    "postdocs": "api-documenter markdown --input-folder temp --output-folder docs",
    "lint": "eslint . --ext ts,js --fix",
    "prerelease": "npm run build",
    "release": "standard-version --sign",
    "test": "mocha",
    "pretest:cov": "rimraf coverage .nyc_output",
    "test:cov": "nyc mocha",
    "test:watch": "mocha --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "npm run lint",
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc -i",
      "prettier --write"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "file": "./ad-hocs/mocha/plugins.ts",
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "./ad-hocs/mocha/hooks.ts"
    ],
    "sort": true,
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "nyc": {
    "all": true,
    "branches": 90,
    "check-coverage": true,
    "extends": "@istanbuljs/nyc-config-typescript",
    "functions": 90,
    "include": [
      "src/**/*.ts"
    ],
    "lines": 90,
    "reporter": [
      "text-summary",
      "html"
    ],
    "statements": 90,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    }
  },
  "dependencies": {
    "lodash.get": "~4.4.2",
    "lodash.set": "~4.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "~11.0.0",
    "@commitlint/config-conventional": "~11.0.0",
    "@istanbuljs/nyc-config-typescript": "~1.0.1",
    "@microsoft/api-documenter": "~7.9.15",
    "@microsoft/api-extractor": "~7.10.4",
    "@types/chai": "~4.2.14",
    "@types/chai-as-promised": "~7.1.3",
    "@types/lodash": "~4.14.162",
    "@types/lodash.get": "~4.4.6",
    "@types/lodash.set": "~4.3.6",
    "@types/mocha": "~8.0.3",
    "@types/node": "~14.14.3",
    "@types/sinon": "~9.0.8",
    "@types/sinon-chai": "~3.2.5",
    "@typescript-eslint/eslint-plugin": "~4.5.0",
    "@typescript-eslint/parser": "~4.5.0",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "eslint": "~7.11.0",
    "eslint-config-prettier": "~6.14.0",
    "eslint-plugin-jest": "~24.1.0",
    "eslint-plugin-mocha": "~8.0.0",
    "husky": "~4.3.0",
    "lint-staged": "~10.4.2",
    "lodash": "~4.17.20",
    "markdown-toc": "~1.2.0",
    "mocha": "~8.2.0",
    "node-vault": "~0.9.20",
    "nyc": "~15.1.0",
    "prettier": "~2.1.2",
    "prettier-plugin-organize-imports": "~1.1.1",
    "prettier-plugin-packagejson": "~2.2.6",
    "rimraf": "~3.0.2",
    "sinon": "~9.2.0",
    "sinon-chai": "~3.5.0",
    "source-map-support": "~0.5.19",
    "standard-version": "~9.0.0",
    "ts-node": "~9.0.0",
    "typescript": "~4.0.3"
  },
  "optionalDependencies": {
    "node-vault": "~0.9.20"
  },
  "volta": {
    "node": "14.2.0",
    "npm": "7.0.2"
  }
}
