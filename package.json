{
  "name": "@willsoto/node-konfig",
  "version": "0.1.0",
  "private": true,
  "description": "Node configuration package",
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "clean": "yarn workspaces foreach run clean",
    "predocs": "yarn run build",
    "docs": "yarn workspaces foreach run docs",
    "lint": "eslint . --ext ts,js --fix",
    "prerelease": "yarn run build",
    "release": "standard-version --sign",
    "test": "yarn workspaces foreach run test",
    "test:cov": "yarn workspaces foreach run test:cov"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "yarn run lint",
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc -i",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "~11.0.0",
    "@commitlint/config-conventional": "~11.0.0",
    "@istanbuljs/nyc-config-typescript": "~1.0.1",
    "@microsoft/api-documenter": "~7.9.16",
    "@microsoft/api-extractor": "~7.10.4",
    "@types/chai": "~4.2.14",
    "@types/chai-as-promised": "~7.1.3",
    "@types/lodash": "~4.14.162",
    "@types/mocha": "~8.0.3",
    "@types/node": "~14.14.5",
    "@types/sinon": "~9.0.8",
    "@types/sinon-chai": "~3.2.5",
    "@typescript-eslint/eslint-plugin": "~4.6.0",
    "@typescript-eslint/parser": "~4.6.0",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "eslint": "~7.12.1",
    "eslint-config-prettier": "~6.14.0",
    "eslint-plugin-jest": "~24.1.0",
    "eslint-plugin-mocha": "~8.0.0",
    "husky": "~4.3.0",
    "lint-staged": "~10.5.0",
    "lodash": "~4.17.20",
    "markdown-toc": "~1.2.0",
    "mocha": "~8.2.0",
    "node-vault": "~0.9.20",
    "nyc": "~15.1.0",
    "prettier": "~2.1.2",
    "prettier-plugin-organize-imports": "~1.1.1",
    "prettier-plugin-packagejson": "~2.2.7",
    "rimraf": "~3.0.2",
    "sinon": "~9.2.0",
    "sinon-chai": "~3.5.0",
    "source-map-support": "~0.5.19",
    "standard-version": "~9.0.0",
    "ts-node": "~9.0.0",
    "typescript": "~4.0.5"
  },
  "volta": {
    "node": "14.14.0"
  }
}
