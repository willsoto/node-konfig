{
  "name": "@willsoto/node-konfig-vault",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage .nyc_output docs temp",
    "predocs": "npm run build",
    "docs": "api-extractor run --local --verbose",
    "postdocs": "api-documenter markdown --input-folder temp --output-folder docs",
    "prerelease": "npm run build",
    "release": "standard-version --sign",
    "test": "mocha",
    "pretest:cov": "rimraf coverage .nyc_output",
    "test:cov": "nyc mocha",
    "test:watch": "mocha --watch"
  },
  "mocha": {
    "extends": "../../.mocharc.js"
  },
  "nyc": {
    "extends": "../../nyc.config.js",
    "include": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "~1.0.1",
    "@microsoft/api-documenter": "~7.9.15",
    "@microsoft/api-extractor": "~7.10.4",
    "@types/chai": "~4.2.14",
    "@types/chai-as-promised": "~7.1.3",
    "@types/mocha": "~8.0.3",
    "@types/node": "~14.14.2",
    "@types/sinon": "~9.0.8",
    "@types/sinon-chai": "~3.2.5",
    "@willsoto/node-konfig-core": "workspace:*",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "mocha": "~8.2.0",
    "node-vault": "~0.9.20",
    "nyc": "~15.1.0",
    "rimraf": "~3.0.2",
    "sinon": "~9.2.0",
    "sinon-chai": "~3.5.0",
    "source-map-support": "~0.5.19",
    "ts-node": "~9.0.0",
    "typescript": "~4.0.3"
  },
  "peerDependencies": {
    "node-vault": "~0.9.20"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
