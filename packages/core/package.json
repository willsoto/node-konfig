{
  "name": "@willsoto/node-konfig-core",
  "version": "2.2.0",
  "description": "Core configuration pacakge supporting file, static and environment variables",
  "keywords": [
    "config",
    "configuration",
    "yaml",
    "toml",
    "json",
    "configuration-management"
  ],
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage .nyc_output docs temp *.tsbuildinfo",
    "lint": "eslint . --ext ts,js --fix",
    "predocs": "npm run build",
    "test": "mocha",
    "test:cov": "nyc mocha",
    "test:watch": "mocha --watch"
  },
  "nyc": {
    "extends": "@node-konfig-tools/nyc",
    "include": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "cockatiel": "~2.0.1",
    "js-yaml": "~4.1.0",
    "lodash": "~4.17.21",
    "meow": "~9.0.0",
    "toml": "~3.0.0"
  },
  "devDependencies": {
    "@node-konfig-tools/eslint": "workspace:*",
    "@node-konfig-tools/mocha": "workspace:*",
    "@node-konfig-tools/nyc": "workspace:*",
    "@rushstack/eslint-config": "~2.3.4",
    "@types/chai": "~4.2.17",
    "@types/chai-as-promised": "~7.1.3",
    "@types/js-yaml": "~4.0.1",
    "@types/lodash": "~4.14.168",
    "@types/mocha": "~8.2.2",
    "@types/node": "~15.0.2",
    "@types/sinon": "~10.0.0",
    "@types/sinon-chai": "~3.2.5",
    "eslint": "~7.25.0",
    "mocha": "~8.3.2",
    "nyc": "~15.1.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.2.4"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
