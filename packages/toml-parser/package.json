{
  "name": "@willsoto/node-konfig-toml-parser",
  "version": "1.0.0",
  "description": "TOML parser support for Node Konfig",
  "keywords": [
    "config",
    "configuration",
    "toml",
    "configuration-management"
  ],
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage .nyc_output docs temp *.tsbuildinfo",
    "lint": "eslint . --ext ts,js --fix",
    "predocs": "npm run build",
    "test": "mocha",
    "test:cov": "nyc mocha",
    "test:watch": "mocha --watch"
  },
  "nyc": {
    "extends": "@node-konfig-tools/nyc",
    "include": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "toml": "~3.0.0"
  },
  "devDependencies": {
    "@node-konfig-tools/eslint": "workspace:*",
    "@node-konfig-tools/mocha": "workspace:*",
    "@node-konfig-tools/nyc": "workspace:*",
    "@rushstack/eslint-config": "~2.4.0",
    "@types/chai": "~4.2.21",
    "@types/chai-as-promised": "~7.1.4",
    "@types/mocha": "~9.0.0",
    "@types/node": "~16.4.10",
    "@types/sinon": "~10.0.2",
    "@types/sinon-chai": "~3.2.5",
    "@willsoto/node-konfig-core": "workspace:*",
    "eslint": "~7.32.0",
    "mocha": "~9.0.3",
    "nyc": "~15.1.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "@willsoto/node-konfig-core": "^3.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
